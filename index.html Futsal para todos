    <!-- JavaScript para Encuestas y Modales -->
    <script>
        // Función para mostrar el modal de confirmación
        function showModal(message) {
            document.getElementById('modal-message').textContent = message;
            document.getElementById('modal-container').classList.remove('hidden');
        }

        // Función para cerrar el modal
        function closeModal() {
            document.getElementById('modal-container').classList.add('hidden');
        }

        // Manejar el envío de la Encuesta de Opinión General
        function handleOpinionSubmit(event) {
            event.preventDefault();
            const selectedOption = document.querySelector('input[name="opinion"]:checked');
            const resultElement = document.getElementById('result-opinion');

            if (selectedOption) {
                const message = `¡Gracias por tu voto! Has seleccionado: "${selectedOption.value}". (No se guarda en la base de datos).`;
                resultElement.textContent = message;
                resultElement.classList.remove('hidden');
                // Simular el reseteo del formulario para permitir otra selección si se desea
                document.getElementById('form-opinion').reset();
            } else {
                showModal('Por favor, selecciona una opción para votar.');
            }
        }

        // Manejar el envío de la Encuesta de Participación Deportiva
        function handleParticipationSubmit(event) {
            event.preventDefault();
            const nombre = document.getElementById('nombre').value;
            const carrera = document.getElementById('carrera').value;
            const interes = document.querySelector('input[name="interes"]:checked')?.value || 'No especificado';
            const resultElement = document.getElementById('result-participacion');

            const message = `¡Solicitud recibida! ${nombre} de ${carrera} ha expresado interés en la categoría: ${interes}.`;
            resultElement.textContent = message;
            resultElement.classList.remove('hidden');
            showModal('Tu solicitud de participación ha sido registrada con éxito. ¡Gracias!');
            document.getElementById('form-participacion').reset();
        }

        // Manejar el envío del Formulario de Contacto
        function handleContactSubmit(event) {
            event.preventDefault();
            const email = document.getElementById('email').value;
            const sugerencia = document.getElementById('sugerencia').value;

            // En un entorno real, aquí se enviaría la data a un servidor (Firebase, etc.)
            console.log("Contacto/Sugerencia enviada:", { email, sugerencia });

            showModal('¡Sugerencia Enviada! Agradecemos tu valioso comentario. Nos pondremos en contacto pronto.');
            document.getElementById('form-sugerencias').reset();
        }

        // Inicializar íconos de Lucide
        lucide.createIcons();
    </script>
</body>
</html>

